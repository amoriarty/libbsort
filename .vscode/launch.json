{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "main launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/main",
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": false,
			"args": [
				"c",
				"a",
				"b",
				"a"
			],
			"preLaunchTask": "main",
			"linux": {
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			}
		},
		{
			"name": "main attach",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceRoot}/main",
			"processId": "${command:pickProcess}",
			"linux": {
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			}
		}
	]
}
